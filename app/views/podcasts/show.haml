- t "Episode 0#{@podcast.id}: #{h(@podcast.name)}"

#podcast_episode

  #details
    #number= "Episode #{@podcast.id}"
    %h1= h(@podcast.name)

    = RedCloth.new(@podcast.description).to_html
    
    .watch_now
      = link_to "Watch now", @podcast.movie_link

  .screenshot
    = link_to(image_tag(@podcast.screenshot.url, :size => "345x266", :alt => "Episode #{@podcast.id}"), @podcast.movie_link)

  #actions
    = link_to "More episodes from the SD Ruby Podcast&raquo;", podcasts_path
