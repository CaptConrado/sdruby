%h1=t @user.full_name

#user_photo
  = image_tag @user.avatar.url(:large)

%p
  = link_to 'Edit Info &amp; Avatar', edit_user_path(@user)

- if @user.about
  %p
    %strong= "About #{@user.first_name}"
  #user_about= @user.about

- if @user.links
  %p
    %strong=  "#{@user.first_name}'s Links"
  #user_links= linkify @user.links if @user.links
