%h1=t @user.full_name

#user_photo
  = image_tag @user.avatar.url(:large)

%p
  = link_to 'Edit Info &amp; Avatar', edit_user_path(@user)

%p
  %strong= "About #{@user.full_name.split(' ').first}"
#user_about= @user.about

%p
  %strong=  "#{@user.full_name.split(' ').first}'s Links"
#user_links= linkify @user.links
