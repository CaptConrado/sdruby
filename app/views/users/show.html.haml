
.profile

  #links_and_projects

    - unless @user.links.blank?
      %p
        %strong= "Links"
        %ul#links
          = iconify_and_link @user.links, :size => 32
    
    - unless @user.github_projects.blank?
      %p
        %strong GitHub Projects
        %ul#projects
          = show_github_projects_for(@user)


      
  #basics
  
    #avatar
      = image_tag @user.avatar.url(:medium)

    %h1=t @user.full_name

    - unless @user.about.blank?
      %p
        = @user.about

    - unless @user.started_using_ruby_on.blank?
      %p
        %strong Started using Ruby
        in
        = @user.started_using_ruby_on.strftime('%B %Y')
      
    %p
      = link_to 'edit profile', edit_user_path(@user)
    
  %br.clear