%h1=t "Editing widget"

= error_messages_for :widget

- form_for(@widget) do |f|
  %p
    %label{:for => "widget_setup"} Setup:
    = f.text_field :setup

  %p
    %label{:for => "widget_view"} View:
    = f.text_area :view

  %p
    %label{:for => "widget_column"} Column:
    = f.text_field :column

  %p
    %label{:for => "widget_row"} Row:
    = f.text_field :row
    
  %p
    = f.submit "Update"

  %p
    = link_to 'Show', @widget
    = "|"
    = link_to 'Back', widgets_path