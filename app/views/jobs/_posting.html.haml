- form_for(@job) do |f|
  %label{:for => 'title'}
    title:
  = f.text_field :title

  %label{:for => 'description'}
    description:
  = f.text_area :description, :cols => 60

  %label{:for => 'contract'}
    contract?
  = f.check_box :contract

  %label{:for => 'publsihed'}
    publish?
  = f.check_box :published

  = submit_tag 'submit'




  
  